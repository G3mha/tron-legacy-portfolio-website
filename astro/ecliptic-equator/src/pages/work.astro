---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';

const projects = (await getCollection('work')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
   title="Projects | Enricco Gemha"
   description="Featured projects in cloud computing, cybersecurity, and robotics"
>
   <div class="stack gap-20">
   	<main class="wrapper stack gap-8">
   		<Hero
   			title="Projects"
   			tagline="A showcase of my technical work and achievements in cloud computing, cybersecurity, and robotics."
   			align="start"
   		/>
   		<Grid variant="offset">
   			{
   				projects.map((project) => (
   					<li>
   						<PortfolioPreview project={project} />
   					</li>
   				))
   			}
   		</Grid>
   	</main>
   	<ContactCTA />
   </div>
</BaseLayout>
